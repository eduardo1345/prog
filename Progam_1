#include <stdio.h>
#include <stdlib.h>
#include <math.h>

double total_vendas=0;
double  salario=1200;
double comisao=10/100;
int total=0;

int main(int argc,char** argv){
  
    printf("Degite o valor total de vendas: \n") ;    
    scanf("%lf",&total_vendas);

        total= (total_vendas/comisao+salario); 

    printf("salario: %lf  \n",total);

   return (EXIT_SUCCESS);
}
